<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context="au.com.chris.antdisplay.BasicMetricDisplayFragment" >
   
    <LinearLayout android:id="@+id/metric_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
	    <ImageView android:id="@+id/metric_icon"
		    android:layout_height="100dp"
	    	android:layout_width="0dp"
	    	android:layout_weight="1"/>
	    
	    <TextView android:id="@+id/metric_info" 
	        android:layout_width="0dp"
	    	android:layout_height="100dp"
	    	android:layout_weight="1"
	     	android:textColor="@android:color/white"
	     	android:textSize="16dp"
	     	android:gravity="center"
	     	android:text="@string/metric_connecting"/>
	    
	    <TextView android:id="@+id/metric_display" 
	        android:layout_width="0dp"
	    	android:layout_height="100dp"
	    	android:layout_weight="1"
	     	android:textColor="@android:color/white"
	     	android:textSize="36dp"
	     	android:gravity="center"
	     	android:text="888"
	     	android:visibility="gone" />
    </LinearLayout>
    
    <com.androidplot.xy.XYPlot android:id="@+id/metric_chart"
	    android:layout_width="fill_parent"
	    android:layout_height="200dp"
	    android:layout_marginTop="10px"
	    android:layout_marginLeft="10px"
	    android:layout_marginRight="10px"
    />
</LinearLayout>
    
    
    


